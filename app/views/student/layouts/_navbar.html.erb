<header>
    <div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            <%= link_to "Big D Code", root_path, id:"logo" %>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-9">
            
                <% if user_signed_in? %>
                    <ul class="pull-right user_panel">
                        <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><strong>Account</strong> <b class="caret"></b></a>
                            <ul class="dropdown-menu" style="left:-100px;">
                                <li>
                                    <%= link_to student_dashboard_path do %>
                                        <i class="icon-user">Member area</i>
                                    <% end %>
                                </li>
                                <li><a href="#"><i class=" icon-download"></i> Downloads</a></li>
                                <li>
                                    <%= link_to settings_path do %>
                                        <i class="icon-cog"></i> Settings
                                    <% end %>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <%= link_to destroy_user_session_path, method: :delete do %>
                                        <i class="icon-off"></i> Logout
                                    <% end %>
                                </li>
                            </ul>
                        </li>
                     </ul>
                <% end %>
                <ul id="top_nav" class="hidden-xs">
                    <% if !current_user.profile  %>
                        <li><%= link_to "Apply for school", apply_path %></li>
                    <% end %>
                    <li><%= link_to "Dashboard", student_dashboard_path %></li>
                    <li><%= link_to "Course", course_path(Course.first.id) %></li>
                    <li><%= link_to "Contact", contact_us_path %></li>
                    <li><%= link_to "Blog", blog_path %></li>
                </ul>
        </div>
    </div>
</div>
</header><!-- End header -->

<nav>
<div class="container hidden">
    <div class="row">
        <div class="col-md-12">
            <div id="mobnav-btn"></div>
            <ul class="sf-menu">
                <li>
                    <%= link_to "Home", root_path %>
                </li>
                <li><%= link_to "Course", lessons_path %></li>
                <li><%= link_to "Pricing", pricing_path %></li>
                <li><%= link_to "About", about_path %></li>
                <li><%= link_to "Contact", contact_us_path %></li>
                <li><%= link_to "Blog", blog_path %></li>
            </ul>
            
            <div class="col-md-3 pull-right hidden-lg hidden-xs">
                    <div id="sb-search" class="sb-search">
                        <form>
                            <input class="sb-search-input" placeholder="Enter your search term..." type="text" value="" name="search" id="search">
                            <input class="sb-search-submit" type="submit" value="">
                            <span class="sb-icon-search"></span>
                        </form>
                    </div>
              </div><!-- End search -->
              
        </div>
    </div><!-- End row -->
</div><!-- End container -->
</nav>
