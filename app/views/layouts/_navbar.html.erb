<header>
    <div class="container">
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-3">
            <%= link_to "AnonyQ", root_path, id:"logo" %>
        </div>
        <div class="col-md-9 col-sm-9 col-xs-9">
            
                <% if user_signed_in? %>
                    <ul class="pull-right user_panel">
                        <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <strong><%= !current_user.profile.nil? && !current_page?(apply_path) ? "#{current_user.profile.first_name} #{current_user.profile.last_name}" : "User" %></strong> <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <%= link_to dashboard_path do %>
                                        <i class="icon-user">Member area</i>
                                    <% end %>
                                </li>
                                <li><a href="#"><i class=" icon-download"></i> Downloads</a></li>
                                <li>
                                    <%= link_to settings_path do %>
                                        <i class="icon-cog"></i> Settings
                                    <% end %>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <%= link_to destroy_user_session_path, method: :delete do %>
                                        <i class="icon-off"></i> Logout
                                    <% end %>
                                </li>
                            </ul>
                        </li>
                     </ul>
                <% else %>
                    <div class=" pull-right">
                        <%= link_to "Sign in", new_user_session_path, class: "button_top", id: "login_top" %>
                        <%= link_to "Sign up", new_user_registration_path, class: "button_top hidden-xs", id:"apply" %>
                    </div>
                <% end %>
            <% if user_signed_in? && !current_user.profile  %>
                <ul id="top_nav" class="hidden-xs">
                    <li><%= link_to "Apply for school", apply_path %></li>
                </ul>
            <% end %>
        </div>
    </div>
</div>
</header><!-- End header -->

<nav>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="mobnav-btn"></div>
            <ul class="sf-menu">
                <li>
                    <%= link_to "Home", root_path %>
                </li>
                <li><%= link_to "Course", course_path(Course.first) %></li>
                <li><%= link_to "Pricing", pricing_path %></li>
                <li><%= link_to "About", about_path %></li>
                <li><%= link_to "Contact", contact_us_path %></li>
              </ul>
            
            <div class="col-md-3 pull-right hidden-sm hidden-xs">
                    <div id="sb-search" class="sb-search">
                        <form>
                            <input class="sb-search-input" placeholder="Enter your search term..." type="text" value="" name="search" id="search">
                            <input class="sb-search-submit" type="submit" value="">
                            <span class="sb-icon-search"></span>
                        </form>
                    </div>
              </div><!-- End search -->
              
        </div>
    </div><!-- End row -->
</div><!-- End container -->
</nav>
