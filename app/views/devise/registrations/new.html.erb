<section id="login_bg">
<div  class="container">
<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    <div id="login">
      <p class="text-center">
        <%= image_tag "theme/login_logo.png", alt:"", class:"" %>
      </p>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: ""}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.email_field :email, class: "form-control required", placeholder: 'Email' %>
          <span class="input-icon"><i class="icon-email"></i></span>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "form-control required", id:'password1', placeholder: 'Password' %>
          <span class="input-icon"><i class=" icon-lock"></i></span>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "form-control required", id:'password2', placeholder: 'Confirm' %>
          <span class="input-icon"><i class=" icon-lock"></i></span>
        </div>
                <div id="pass-info" class="clearfix"></div>
        <%= f.button "Create an account", class: "button_fullwidth" %>
      <% end %>
      <%= link_to "Sign In", new_user_session_path, class: "button_fullwidth-2" %>
    </div>
  </div>
</div>
</div>
</section><!-- End register -->